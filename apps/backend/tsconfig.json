{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "rootDir": "src",
    "outDir": "dist",

    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "paths": {
      "@tdg/core/*": ["../../packages/core/src/*"],
      "@tdg/agents/*": ["../../packages/agents/src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
